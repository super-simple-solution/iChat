{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./node_modules/.cache",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types/",
  ]
}
